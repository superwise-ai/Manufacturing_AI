# Manufacturing Predictive Maintenance AI - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Superwise AI Integration
# =============================================================================
# Superwise AI API configuration for advanced machine learning predictions
SUPERWISE_BASE_URL=https://api.superwise.ai/v1
SUPERWISE_APP_ID=your_superwise_app_id_here
SUPERWISE_TIMEOUT=30

# =============================================================================
# Data Configuration
# =============================================================================
# Directory containing synthetic data files
DATA_DIR=synthetic-data

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# API Timeouts and Caching
# =============================================================================
# Request timeout in seconds
REQUEST_TIMEOUT=60
# Cache TTL in seconds
CACHE_TTL=60
